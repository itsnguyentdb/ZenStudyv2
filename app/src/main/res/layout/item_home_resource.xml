<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Resource Icon -->
        <TextView
            android:id="@+id/resourceIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="ðŸ“š"
            android:textSize="18sp" />

        <!-- Resource Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/resourceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resource Title"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resourceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PDF Document"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/resourceUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Updated 2 hours ago"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Action Button -->
        <ImageButton
            android:id="@+id/resourceAction"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert" />

    </LinearLayout>

</androidx.cardview.widget.CardView>