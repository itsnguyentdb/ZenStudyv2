<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/text_subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject Name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subject_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_subject_name"
            android:layout_marginTop="4dp"
            android:text="Description"
            android:textColor="#555555"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/button_edit_subject"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:contentDescription="Edit Subject"
            android:src="@drawable/ic_edit_filled"
            app:tint="#49454F" />

        <ImageButton
            android:id="@+id/button_delete_subject"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toStartOf="@id/button_edit_subject"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:contentDescription="Delete Subject"
            android:src="@drawable/ic_delete_filled"
            app:tint="#B00020" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
